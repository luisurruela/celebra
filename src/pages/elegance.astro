---
import Layout from "../layouts/Layout.astro";
import datosInvitacion from "../data/elegance-invitations.json";
import RSVPForm from '../components/RSVPForm';

const pageTitle = `${datosInvitacion.subtitle} | Celebración`;
const pageDescription = `Invitación a la boda de ${datosInvitacion.subtitle}.`;
---

<Layout title={pageTitle} description={pageDescription}>
  <main
    class="relative h-screen flex flex-col justify-center items-center text-center"
    style={`background-image: url(${datosInvitacion.coverImage}); background-size: cover; background-position: center;`}
  >
    <div class="absolute inset-0 bg-black opacity-40"></div>
    <div class="relative z-10 text-white p-6 md:p-12">
      <h1 class="text-6xl md:text-8xl font-playfair leading-tight">
        {datosInvitacion.subtitle}
      </h1>
      <p
        class="mt-4 text-xl md:text-2xl font-montserrat font-light tracking-wide"
      >
        {datosInvitacion.date}
      </p>
    </div>
  </main>

  <section class="bg-white py-16 text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-playfair mb-4">Detalles del Evento</h2>
      <div class="grid md:grid-cols-2 gap-8 mt-8">
        <div>
          <h3 class="text-2xl font-playfair">
            {datosInvitacion.details.ceremony.location}
          </h3>
          <p class="font-montserrat">{datosInvitacion.details.ceremony.time}</p>
        </div>
        <div>
          <h3 class="text-2xl font-playfair">
            {datosInvitacion.details.reception.location}
          </h3>
          <p class="font-montserrat">
            {datosInvitacion.details.reception.time}
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="confirmacion" class="bg-gray-200 py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-playfair mb-8">Confirma tu Asistencia</h2>
      <RSVPForm client:load />
    </div>
  </section>
</Layout>
